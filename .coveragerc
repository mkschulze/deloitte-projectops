[run]
# Source directories to measure
source = .

# Files and directories to exclude from coverage
omit =
    # Scripts directory (release, demo data creation, etc.)
    scripts/*
    
    # Database migrations (auto-generated by Alembic)
    migrations/*
    
    # Demo and initialization scripts
    create_demo_data.py
    init_db.py
    
    # Test files themselves
    tests/*
    
    # Virtual environments and cache
    .venv/*
    venv/*
    __pycache__/*
    
    # Configuration that's environment-dependent
    instance/*

[report]
# Exclude lines from coverage
exclude_lines =
    # Skip pragma comments
    pragma: no cover
    
    # Skip defensive assertions
    raise AssertionError
    raise NotImplementedError
    
    # Skip abstract methods
    @abstractmethod
    
    # Skip type checking blocks
    if TYPE_CHECKING:
    
    # Skip debug-only code
    if __name__ == .__main__.:
    
    # Skip defensive coding
    \.\.\.

# Show missing lines in report
show_missing = True

# Minimum coverage percentage (fail if below)
# fail_under = 80

[html]
# Output directory for HTML reports
directory = htmlcov

[xml]
# Output file for XML reports (for CI integration)
output = coverage.xml
